<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:strokeColor="@drawable/stroke_color"
    app:strokeWidth="1dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_report_work_detail_spk_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="SPK No:"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="@dimen/activity_horizontal_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_item_report_work_detail_article_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Article No: "
            android:layout_margin="@dimen/activity_horizontal_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_report_work_detail_spk_no" />

        <TextView
            android:id="@+id/tv_item_report_work_detail_work_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Work type: "
            android:layout_margin="@dimen/activity_horizontal_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_report_work_detail_article_no" />

        <TextView
            android:id="@+id/tv_item_report_work_detail_unit_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Unit cost: "
            android:layout_margin="@dimen/activity_horizontal_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_report_work_detail_work_type" />

        <TextView
            android:id="@+id/tv_item_report_work_detail_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Quantity: "
            android:layout_margin="@dimen/activity_horizontal_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_report_work_detail_unit_cost" />

        <TextView
            android:id="@+id/tv_item_report_work_detail_total_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Total cost: "
            android:layout_margin="@dimen/activity_horizontal_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_report_work_detail_quantity" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_item_report_work_detail_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            tools:text="Date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_report_work_detail_total_cost"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>