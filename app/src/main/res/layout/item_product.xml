<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_item_product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@drawable/stroke_color"
    android:checkable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_product_article_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Article No."
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_item_product_drawing_cost"/>

        <TextView
            android:id="@+id/tv_item_product_drawing_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            tools:text="Drawing Cost"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_product_article_no"
            app:layout_constraintBottom_toTopOf="@id/tv_item_product_lining_drawing_cost"/>

        <TextView
            android:id="@+id/tv_item_product_lining_drawing_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Lining Drawing Cost"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_product_drawing_cost"
            app:layout_constraintBottom_toTopOf="@id/tv_item_product_sewing_cost"/>

        <TextView
            android:id="@+id/tv_item_product_sewing_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Sewing Cost"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_product_lining_drawing_cost"
            app:layout_constraintBottom_toTopOf="@id/tv_item_product_assembling_cost"/>

        <TextView
            android:id="@+id/tv_item_product_assembling_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Assembling Cost"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_product_sewing_cost"
            app:layout_constraintBottom_toTopOf="@id/tv_item_product_insole_stitching_cost"/>

        <TextView
            android:id="@+id/tv_item_product_insole_stitching_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Insole Stitching Cost"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_product_assembling_cost"
            app:layout_constraintBottom_toTopOf="@id/tv_item_product_sole_stitching_cost"/>

        <TextView
            android:id="@+id/tv_item_product_sole_stitching_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Sole Stitching Cost"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_product_insole_stitching_cost"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>